<%= simple_form_for @employee do |form| %>
  <div class="form-group">
    <%= form.input :name, placeholder: "Enter a Complete Name" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.association :branch, prompt: "Select a Branch Name" %>
  </div>
  <div class="form-group">
    <%= form.association :department, prompt: "Select a Department Name",include_blank: false %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.input :ext, placeholder: "Extention number" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.input :line_id, placeholder: "Line id number" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.submit  class: "btn btn-primary btn-lg mt-3 mt-2" %>
    <%= link_to "Back", employees_path, class: "btn btn-lg mt3 mt-2" %>
  </div>
<% end %>
