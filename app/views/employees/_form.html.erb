<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: "Employee Name", class: "form-control mb-2" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.label :branch_id, style: "display: block" %>
    <%= form.collection_select :branch_id, Branch.all, :id, :branch_name, { prompt: "Choose Branch" } , {class: "dropdown mb-2"} %>
  </div>
  <div class="form-group">
    <%= form.label :department_id, style: "display: block" %>
    <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Choose Department" } , {class: "dropdown mb-2"} %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.label :ext, style: "display: block" %>
    <%= form.text_field :ext, placeholder: "Extention number", class: "form-control mb-2" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.label :line_id, style: "display: block" %>
    <%= form.number_field :line_id, placeholder: "Line id number", class: "form-control mb-2" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.submit  class: "btn btn-primary btn-lg mt-3 mt-2" %>
    <%= link_to "Back", employees_path, class: "btn btn-lg mt3 mt-2" %>
  </div>
<% end %>
