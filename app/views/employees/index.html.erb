<div class="row">
  <div class="justify-content-md-center">
    <p style="color: green" class="text-center"><%= notice %></p>

    <div class= "mx-auto mb-5 mt-5">
      <%= render "employees/search" %>
    </div>

    <div class="row align-self-end">
      <div class="col-8"></div>
      <div class="col"></div>
      <div class="col">
        <%= link_to "Add New Extention", new_employee_path, class: "btn btn-primary" if current_user %>
      </div>
    </div>

    <div class="table table-responsive text-center">
      <table class="col-4 table table-striped table-hover text-center">
        <thead>
          <tr>
            <th scope="col"><%= sort_link @q, :name, "Branch" %></th>
            <th scope="col"><%= sort_link @q, :name, "Name" %></th>
            <th scope="col"><%= sort_link @q, :name, "Department" %></th>
            <th scope="col">Extention </th>
            <% if current_user %>
              <th scope="col">Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr class="">
              <td scope="row"><%= employee.branch.branch_name %></td>
              <td><%= employee.name %></td>
              <td><%= employee.department.name %></td>
              <td>(<%= employee.line_id%>)<%= employee.ext %></td>
              <% if current_user %>
                <td><%= link_to "Edit", edit_employee_path(employee), class: "btn btn-info btn-xs" %> | <%= link_to "Delete", employee, class: "btn btn-danger btn-xs" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
