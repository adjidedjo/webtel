<%= form_with(model: branch) do |form| %>
  <% if branch.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h2>
      <ul>
        <% branch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :branch_name, style: "display: block" %>
    <%= form.text_field :branch_name, placeholder: "branch Name", class: "form-control mb-2" %>
  </div>
  <div class="b-example-divider"></div>
  <div class="form-group">
    <%= form.submit  class: "btn btn-primary btn-lg mt-3 mt-2" %>
    <%= link_to "Back", branches_path, class: "btn btn-lg mt3 mt-2" %>
  </div>
<% end %>
