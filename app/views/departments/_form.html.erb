<%= simple_form_for @department do |form| %>
  <div class="form-group">
    <%= form.input :name, placeholder: "Department Name" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg mt-3 mt-2" %>
    <%= link_to "Back", departments_path, class: "btn btn-lg mt3 mt-2" %>
  </div>
<% end %>
