<div class="row d-flex justify-content-center mt-5">
	<div class="col-12 col-md-8 col-lg-6 col-xl-5">
		<div class="card py-3 px-2">
      <%= form_with(model: department) do |form| %>
        <% if department.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>

            <ul>
              <% department.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, placeholder: "Department Name", class: "form-control mb-2" %>
        </div>

        <div class="form-group">
          <%= form.submit class: "btn btn-primary btn-lg mt-3 mt-2" %>
          <%= link_to "Back", departments_path, class: "btn btn-lg mt3 mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
