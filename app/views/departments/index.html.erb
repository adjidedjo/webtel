<div class="row">
  <div class="justify-content-md-center">
    <div class= "mx-auto mb-5 mt-5">
      <%= render "departments/search" %>
    </div>
    <div class="row align-self-end">
      <div class="col-8"></div>
      <div class="col"></div>
      <div class="col">
        <%= link_to raw("<i class=\"bi bi-plus-circle\"> Add Department</i>"), new_department_path, class: "btn btn-primary" if current_user %>
      </div>
    </div>
    <div class="table table-responsive text-center">
      <table class="col-4 table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Department<i class="fa-solid fa-a"></i></th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |dept| %>
            <tr class="">
              <td scope="row"><%= dept.name %></td>
              <td><%= link_to "Edit", edit_department_path(dept), class: "btn btn-info btn-xs" %> | 
              <%= button_to "Delete", dept, method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, form: {style: 'display:inline-block;'}, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  </div>
</div>
