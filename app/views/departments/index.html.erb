<p style="color: green"><%= notice %></p>

<div>
  <%= render "departments/search" %>
</div>

<div class="row align-self-end">
  <div class="col-8"></div>
  <div class="col"></div>
  <div class="col">
    <%= link_to "Add New Department", new_department_path, class: "btn btn-primary" if current_user %>
  </div>
</div>

<div class="container table table-responsive text-center">
  <table class="col-4 table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Department</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |dept| %>
        <tr class="">
          <td scope="row"><%= dept.name %></td>
          <td><%= link_to "Edit", edit_department_path(dept), class: "btn btn-info btn-xs" %> | <%= link_to "Delete", dept, class: "btn btn-danger btn-xs" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav @pagy %>
</div>
